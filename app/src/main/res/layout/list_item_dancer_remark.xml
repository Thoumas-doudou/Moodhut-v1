<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_dancer_avatars"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_user" />

    <TextView
        android:id="@+id/tv_dancer_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:background="#DBD5D5"
        android:text="34回复"
        app:layout_constraintStart_toEndOf="@+id/tv_reply_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_dancer_remark" />

    <ImageView
        android:id="@+id/iv_dancer_support"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_dancer_support"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_endorse" />

    <TextView
        android:id="@+id/tv_reply_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="42分钟前"
        app:layout_constraintStart_toStartOf="@+id/tv_dancer_remark"
        app:layout_constraintTop_toBottomOf="@+id/tv_dancer_remark" />

    <TextView
        android:id="@+id/tv_dancer_remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLength="1000"
        android:maxLines="4"
        android:text="的疯狂过后肯定还会的和法规和电话干嘛的规范和高度和干旱环境的未退回工人阶级的封建时代和符号是个好时机国库控股但是看见黄瓜的疯狂过后肯定还会的和法规和电话干嘛的规范和高度和干旱环境的未退回工人阶级的封建时代和符号是个好时机国库控股但是看见黄瓜和改革和改革"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tv_dancer_nickname"
        app:layout_constraintTop_toBottomOf="@+id/iv_dancer_support" />

    <TextView
        android:id="@+id/tv_dancer_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:text="34"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dancer_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="昵称"
        app:layout_constraintStart_toEndOf="@+id/iv_dancer_avatars"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>